@page "/orderbooks/addobooks"
@using ElginEnergy.DataModels;
@using ElginEnergy.UI.Services;
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IOrderBooksService _orderbookService;

<div class="row">
    <div class="column">
        <h1 style="color:darkgoldenrod; font-family:'Times New Roman', Times, serif; font-weight:bolder; border:4px solid powderblue; text-align:center">
            Add Order Books
        </h1>
    </div>
</div>

<EditForm Model="@orderBook" OnValidSubmit="AddBook">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="totalborder">
        <br />
        <div class="displayline">
            <label for="Period" class="form-label labelstyle label">Period : </label>
            <InputNumber class="form-control" style="height:35px; width:200px;" @bind-Value="orderBook.Period" />
        </div>

        <div class="displayline">
            <label for="TradingDay" class="form-label labelstyle label">TradingDay Date : </label>
            <InputDate class="form-control" style="height:35px; width:200px;" @bind-Value="orderBook.TradingDay" />
        </div>

        <div class="displayline">
            <label for="Quantity" class="form-label labelstyle label">Quantity : </label>
            <InputNumber class="form-control" style="height:35px; width:200px;" @bind-Value="orderBook.Quantity" />
        </div>

        <div class="displayline">
            <label for="Price" class="form-label labelstyle label">Price : </label>
            <InputNumber class="form-control" style="height:35px; width:200px;" @bind-Value="orderBook.Price" />
        </div>

        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary buttonalign" @onclick='@(async () => await AddBook())'>Add</button>
        </div>
        <br />
    </div>

</EditForm>

<style>
    .inline {
        display: inline-block;
        border: 1px solid red;
        margin: 10px;
    }

    .displayline {
        display: flex;
        flex-direction: row;
        justify-content: left;
        align-items: normal;
        margin: 0 0 0 0.5em;
    }

    .div {
        margin-bottom: 10px;
    }

    .buttonalign {
        text-align: left;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: large;
        font-weight: bold;
        margin: 10px;
    }

    .label {
        display: inline-block;
        width: 250px;
        text-align: left;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        color: darkcyan;
        font-size: large;
        font-weight: bold;
        margin: 10px;
    }

    .totalborder {
        border: 4px solid darkgoldenrod;
    }
</style>